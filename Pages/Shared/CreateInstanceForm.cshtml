@page
@model FTP_UpLifter.Pages.Shared.CreateInstanceFormModel
<div>
    <form method="post" asp-page-handler="CreateInstance">
        <div class="form-group">
            <h4 for="instanceName"><strong>Instance Name:</strong></h4>
            <input type="text" class="form-control" id="instanceName" name="InstanceName" required />
        </div>
        <h4>SFTP/FTP Information</h4>
        <div class="form-group">
            <label for="ftpServer"><strong>FTP Server:</strong></label>
            <input type="text" class="form-control" id="ftpServer" name="FtpServer" required />
        </div>
        <div class="form-group">
            <label for="ftpUsername"><strong>FTP Username:</strong></label>
            <input type="text" class="form-control" id="ftpUsername" name="FtpUsername" required />
        </div>
        <div class="form-group">
            <label for="ftpPassword"><strong>FTP Password:</strong></label>
            <input type="password" class="form-control" id="ftpPassword" name="FtpPassword" required />
        </div>
        <div class="form-group">
            <label for="ftpDirectory"><strong>FTP Directory:</strong></label>
            <input type="text" class="form-control" id="ftpDirectory" name="FtpDirectory" required />
        </div>
        <div class="form-group">
            <label for="ftpPort"><strong>FTP Port:</strong></label>
            <input type="number" class="form-control" id="ftpPort" name="FtpPort" required />
        </div>
        <div>
            <strong>Sftp Enabled:</strong>
            <label for="sftpEnabled" class="switch">
                <input type="checkbox" class="form-check" id="sftpEnabled" name="SftpEnabled" />
                <span class="slider round"></span>
            </label>
        </div>
        <div class="form-group">
            <label for="sftpPrivateKey"><strong>SFTP Private Key File Path:</strong></label>
            <input type="text" class="form-control" id="sftpPrivateKey" name="SftpPrivateKey" />
        </div>

        <br /><br />

        <h4>File Watcher Information</h4>
        <div class="form-group">
            <label for="watchDirectory"><strong>Watch Directory:</strong></label>
            <input type="text" class="form-control" id="watchDirectory" name="WatchDirectory" required />
        </div>
        <div class="form-group">
            <label for="fileExtension"><strong>Extension Type (* for all):</strong></label>
            <input type="text" class="form-control" id="fileExtension" name="FileExtension" required />
        </div>
        <div>
            <strong>Watcher Enabled:</strong>
            <label for="watcherEnabled" class="switch">
                <input type="checkbox" class="form-check" id="watcherEnabled" name="WatcherEnabled" />
                <span class="slider round"></span>
            </label>
        </div>

        <br /><br />

        <h4>Email Settings</h4>
        <div class="form-group">
            <label for="smtpServer"><strong>SMTP Server:</strong></label>
            <input type="text" class="form-control" id="smtpServer" name="SmtpServer" required />
        </div>
        <div class="form-group">
            <label for="smtpPort"><strong>SMTP Port:</strong></label>
            <input type="number" class="form-control" id="smtpPort" name="SmtpPort" required />
        </div>
        <div class="form-group">
            <label for="smtpUsername"><strong>SMTP Username:</strong></label>
            <input type="text" class="form-control" id="smtpUsername" name="SmtpUsername" required />
        </div>
        <div class="form-group">
            <label for="smtpPassword"><strong>SMTP Password:</strong></label>
            <input type="password" class="form-control" id="smtpPassword" name="SmtpPassword" required />
        </div>
        <div class="form-group">
            <label for="fromEmail"><strong>From Email:</strong></label>
            <input type="email" class="form-control" id="fromEmail" name="FromEmail" required />
        </div>
        <div class="form-group">
            <label for="toEmail"><strong>To Email:</strong></label>
            <input type="email" class="form-control" id="toEmail" name="ToEmail" required />
        </div>
        <div>
            <strong>Email Notifications Enabled:</strong>
            <label for="emailEnabled" class="switch">
                <input type="checkbox" class="form-check" id="emailEnabled" name="EmailEnabled" />
                <span class="slider round"></span>
            </label>
        </div>

        <br /><br />

        <button type="submit" class="btn btn-success">Save Instance</button>
    </form>
</div>